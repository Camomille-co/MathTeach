@model StartModel;
<h2>Авторизация</h2>
<div>
    <form asp-action="Authorize" asp-controller="Home">
        <div>
            Введите логин
        </div>
        <input type="email" asp-for="Login" />
        <div>
            Введите пароль
        </div>
        <input type="password" asp-for="Password" />
        <div>
            <button type="submit">Войти</button>
            <a asp-action="NewUser" asp-controller="Home">
                <button type="button">Регистрация</button>
            </a>
        </div>
        @if (Model != null)
        {
            <div>@Model.Result</div>
        }
    </form>
</div>
