@page
@model LogoutModel
    @{
    ViewData["Title"] = "Log out";
}

<div form asp-action="LogoutAction" asp-controller="Home">
    <button type="submit">Войти</button>
</div>

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-check-inline" asp-area="Identity" asp-page="/Home/Logout" asp-route-returnUrl="@Url.Page("/", new { area = ""})" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Click here to Logout</button>
            </form>
        }
        else
        {
            <p>You have successfully logget out of the application</p>
        }
    }
</header>
